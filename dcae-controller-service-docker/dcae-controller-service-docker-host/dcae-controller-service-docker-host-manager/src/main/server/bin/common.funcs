#
# common shell functions 
#

_die() {
    printf "$(date):FATAL:$1\n"
    exit 2;
}

_fail() {
    _die $1;
}

_fail_with_rc() {
    rc=$1
    shift;
    printf "$(date):ERROR:$@\n";
    exit $rc;
}

_warn() {
    printf "$(date):WARN:$1\n";
}

_info() {
    printf "$(date):INFO:$1\n";
}

_print() {
    _info $1;
}

